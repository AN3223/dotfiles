# vi: ft=sh
# This file is sourced by .shrc

# Update packages
update() {(
	doas xbps-install -Syu xbps
	doas xbps-install -yu
	cd "$(xdistdir)" || return
	git switch personal
	git pull --rebase upstream master
	xdistupgrade
)}

alias sw='startw'
alias sx='startx'

alias :q='exit'
alias :wq='exit'
alias :e='vim '

# Interactive mode
alias cp='cp -i'
alias mv='mv -i'
alias killall='killall -i'

# Colors/human-readable
alias dmesg='dmesg -H'
alias df='df -h'
alias diff='diff --color=always'
alias ls='ls --color=always'
alias rg='rg -Suu --color always'

alias net='ping 8.8.8.8'

alias todo='${EDITOR:-vi} ~/TODO'

alias rtorrent='tmux -L rtorrent attach -t rtorrent'

# search for youtube videos
youtube() {
	mpv ytdl://ytsearchall:"$*"
}

# man-ly info (Also maybe consider info --vi-keys instead of this trick)
info() {
	env info --subnodes "$1" | ${PAGER:-less}
}

man() {
	# The POSIX Programmer's Manual uses Unicode minus signs (U+2212)
	# instead of the hyphen-minus (U+002D), which can make searching for
	# options difficult.
	page=$(env man "$@")
	if [ "$page" ]; then
		printf %s "$page" | sed s/âˆ’/-/g | ${MANPAGER:-${PAGER:-less}}
	fi
}

# find $2 -iname *$1*
# $2 will default to . just like in GNU find
search() {
	find "${2:-.}" -iname "*${1}*"
}

