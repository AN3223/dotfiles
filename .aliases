# vi: ft=sh

# Updates packages
alias update='sudo xbps-install -Su'

# Interactive mode
alias cp='cp -i'
alias mv='mv -i'
alias killall='killall -i'

# Colors/human-readable
alias dmesg='dmesg -H'
alias df='df -h'
alias diff='diff --color=always'
alias ls='ls --color=always'

# Runs ripgrep with smart-casing by default
alias rg='rg -Suu --color always'

alias net='ping 8.8.8.8'

alias startw='. ~/.wayenv && sway 2>&1 | logger'

# Hack to make sudo !! work. The !! substitution will be treated as text,
# not shell code. So if !! includes a pipe/operator/etc it will be
# interpreted as an argument
alias sudo='doas '
alias !!='$(fc -ln -1)'

alias sudoedit='doasedit'
alias su='doas -s'

# man-ly info (Also maybe consider info --vi-keys instead of this trick)
info() {
	/usr/bin/info --subnodes "$1" | ${PAGER:-less}
}

