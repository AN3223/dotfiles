# vi: ft=conf

keymap h SHIFT_LEFT
keymap j UP
keymap k DOWN
keymap l SHIFT_RIGHT

keymap LEFT SHIFT_LEFT
keymap UP DOWN
keymap DOWN UP
keymap RIGHT SHIFT_RIGHT

keymap H PREV
keymap J NEXT_TAB
keymap K PREV_TAB
keymap L NEXT

keymap f LIST_MENU
keymap F COMMAND "MOVE_LIST_MENU ; TAB_LINK"

keymap C-f NEXT_PAGE
keymap C-b PREV_PAGE
keymap C-d NEXT_HALF_PAGE
keymap C-u PREV_HALF_PAGE

keymap ab ADD_BOOKMARK
keymap C-v VIEW_BOOKMARK

# FIXME this should go to the user's WWW_HOME or HTTP_HOME
keymap C-h GOTO https://duckduckgo.com/lite

# FIXME o and O should be able to use search engines, and shouldn't start with
# the current URL
keymap o GOTO
keymap O TAB_GOTO
keymap d CLOSE_TAB

keymap go GOTO
keymap gg BEGIN

keymap r RELOAD

keymap C-g PEEK

keymap yy EXTERN wl-copy
keymap mm COMMAND "MOVE_LIST_MENU ; EXTERN_LINK mpv"
keymap mcm EXTERN mpv

keymap :h HELP
keymap :q ABORT
keymap :set OPTIONS
