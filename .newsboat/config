# Open everything with mpv
browser "mpv --idle=yes"

# Arrow key navigation
bind-key LEFT quit
bind-key RIGHT open
bind-key ENTER open-in-browser-and-mark-read

# Vi-like navigation
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key g home
bind-key G end
bind-key ^F pagedown
bind-key ^B pageup

# Sort by newest
feed-sort-order lastupdated

