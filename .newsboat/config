browser "mpv --idle=yes --fs"

# Arrow key navigation
bind-key LEFT quit
bind-key RIGHT open
bind-key ENTER open-in-browser-and-mark-read

# Vi-like navigation
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key g home
bind-key G end
bind-key ^F pagedown
bind-key ^B pageup

# Sort by newest
feed-sort-order lastupdated

bind-key s sort
bind-key S rev-sort

# Podcast-related settings
player "mpv"
podcast-auto-enqueue yes
max-downloads 3
download-path ~/Podcasts/
podlist-format "%4i %-40b [%6p %%] %S"

